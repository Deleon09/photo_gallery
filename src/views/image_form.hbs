<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form action="" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Image title">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control" placeholder="Image description" ></textarea>
                    </div>
                    <div class="input-group">
                        <label for="inputFile" class="btn btn-primary my-3">
                            <input type="file" name="image" id="inputFile" style="display:none;">
                            Choose file
                        </label>
                    </div>
                    <button class="btn btn-primary"> 
                        Upload photo
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
